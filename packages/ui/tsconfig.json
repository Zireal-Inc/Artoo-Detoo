{
  "files": [],
  "extends": "../../configs/typescript-config/base.json",
  "references": [
    {
      "path": "./tsconfig.storybook.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react", 
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
