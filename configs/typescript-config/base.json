{
    "$schema": "http://json.schemastore.org/tsconfig",
    "display": "Base",
    "compileOnSave": false,
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "preserveWatchOutput": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "preserve",
        "outDir": "../../dist",
        "rootDir": "../../", 
        "baseUrl": ".",
        "paths": { 
            "@ui/*": ["../../packages/ui/src/*"],
            "@robin/*": ["../../apps/www/Robin/src/*"]
        }
    },
    "include": [
        "../../packages/ui/src/**/*",
        "../../apps/www/Robin/src/**/*"
    ],
}
